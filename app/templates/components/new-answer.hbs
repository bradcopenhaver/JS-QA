{{#if newAnswerForm}}
  <h4>Add a New Answer</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="text">Answer text:</label>
        {{input value=text id="text"}}
      </div>

      <div class="form-group">
        <label for="sources">Info sources:</label>
        {{input value=sources id="sources"}}
      </div>

      <button {{action 'saveAnswer'}}>Post</button>
    </form>
  </div>
{{else}}
  <button {{action 'newAnswerForm'}}>Add a New Answer</button>
{{/if}}
